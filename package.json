{
  "name": "kim-eugenia",
  "version": "1.0.0",
  "description": "Take-home exam",
  "main": "index.js",
  "repository": "git@github.com:politics-rewired/effective-rotary-phone.git",
  "author": "bchrobot@politicsrewired.com",
  "license": "MIT",
  "scripts": {
    "start": "node ./dist/server",
    "build": "run-p build:*",
    "build:server": "babel ./server --out-dir dist/server",
    "build:client": "NODE_ENV='development' webpack --mode='development'",
    "watch": "run-p watch:*",
    "watch:server": "nodemon --watch ./server --exec babel-node server/index.js",
    "watch:client": "nodemon --watch ./client -e js,jsx --exec yarn build:client",
    "test": "node scripts/test.js src --env=jsdom",
    "coverage": "node scripts/test.js src --coverage --env=jsdom"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./config/jest/setupTestFramework.js",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "setupFiles": [
      "./config/jest/emailMocks.js"
    ],
    "moduleNameMapper": {
      "^.+\\.(scss)$": "identity-obj-proxy"
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.30",
    "@fortawesome/free-solid-svg-icons": "^5.14.0",
    "@fortawesome/react-fontawesome": "^0.1.11",
    "apollo-boost": "^0.4.9",
    "apollo-client": "^2.5",
    "apollo-server-express": "^2.16.1",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cookie-session": "^1.4.0",
    "envalid": "^6.0.2",
    "express": "^4.17.1",
    "graphql": "^15.3.0",
    "isomorphic-fetch": "^2.2.1",
    "knex": "^0.21.4",
    "md5": "^2.3.0",
    "moment": "^2.27.0",
    "nodemailer": "^6.4.11",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "pg": "^8.3.3",
    "react": "^16.13.1",
    "react-apollo": "^3.1.5",
    "react-dom": "^16.13.1",
    "react-notify-toast": "^0.5.1",
    "react-router-config": "^5.1.1",
    "react-router-dom": "^5.2.0",
    "serialize-javascript": "^4.0.0",
    "sqlite3": "^5.0.0",
    "util": "^0.12.3",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/node": "^7.10.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "babel-loader": "^8.1.0",
    "jest": "^26.4.2",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-hot-middleware": "^2.25.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-class-properties"
      ]
    ]
  }
}
